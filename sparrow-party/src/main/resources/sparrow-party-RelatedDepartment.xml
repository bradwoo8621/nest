<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util 
    	http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- com.github.nest.sparrow.party.internal.RelatedDepartment -->
	<bean
		id="RelatedDepartment"
		class="com.github.nest.arcteryx.persistent.internal.StandalonePersistentBeanDescriptor"
		p:resourceClass="com.github.nest.sparrow.party.internal.RelatedDepartment"
		p:name="RelatedDepartment"
		p:description="Related department"
		scope="singleton"
		p:tableName="T_RELATED_DEPARTMENT"
		p:extendsFromBeanClass="com.github.nest.sparrow.party.internal.PartyRole"
		p:foreignKeyColumnName="RELATED_DEPARTMENT_ID">
		<property name="discriminatorValue">
			<util:constant
				static-field="com.github.nest.sparrow.party.IPartyConstants.ROLE_CODE_RELATED_DEPARTMENT" />
		</property>
		<property
			name="abandonedProperties"
			ref="PartyProperties" />
		<property name="properties">
			<list>
				<!-- branch -->
				<bean
					class="com.github.nest.arcteryx.persistent.internal.PersistentBeanPropertyDescriptor"
					p:name="branch"
					p:description="Branch">
					<!-- the column is refer to a party, not a role -->
					<property name="persistentColumn">
						<bean
							class="com.github.nest.arcteryx.persistent.internal.ManyToOnePersistentColumn"
							p:referencedBeanClass="com.github.nest.sparrow.party.internal.Organization"
							p:foreignKeyColumnName="BRANCH_ID" />
					</property>
				</bean>
				<!-- parent department -->
				<bean
					class="com.github.nest.arcteryx.persistent.internal.PersistentBeanPropertyDescriptor"
					p:name="parentDepartment"
					p:description="Parent department">
					<!-- the column is refer to a role, not a party -->
					<property name="persistentColumn">
						<bean
							class="com.github.nest.arcteryx.persistent.internal.ManyToOnePersistentColumn"
							p:referencedBeanClass="com.github.nest.sparrow.party.internal.RelatedDepartment"
							p:foreignKeyColumnName="PARENT_DEPARTMENT_ID" />
					</property>
				</bean>
			</list>
		</property>
	</bean>
</beans>